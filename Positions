#include <iostream>
#include <windows.h>
using namespace std;
int main()
{
    HANDLE hout=GetStdHandle(STD_OUTPUT_HANDLE);
    HANDLE hin=GetStdHandle(STD_INPUT_HANDLE);
    INPUT_RECORD InputRecord;
    DWORD Events;
    COORD p;
    while(0==0)
    {
        ReadConsoleInput(hin,&InputRecord,1,&Events);
        if(InputRecord.Event.MouseEvent.dwButtonState==1)
        {
            p.X=InputRecord.Event.MouseEvent.dwMousePosition.X;
            p.Y=InputRecord.Event.MouseEvent.dwMousePosition.Y;
            SetConsoleCursorPosition(hout,p);
            cout<<InputRecord.Event.MouseEvent.dwMousePosition.Y<<" x "<<InputRecord.Event.MouseEvent.dwMousePosition.X<<" ";
        }
    }
    return 0;
}
